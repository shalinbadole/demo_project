<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
        <% location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :state, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.text_field :state, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :country, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.text_field :country, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :home, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.text_field :home, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :pincode, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.number_field :pincode, :class => "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit :class => "btn btn-primary"%>
  </div>
<% end %>
