<%if @order_items.any?%>
  <div class="div1" style="background-color: #eee;">
    <h1> <%= current_user.name%></h1>
    <h1> Total:<%= @order_items.length%></h1>
    <h1> Price:<%= @order.total %></h1>
    <div class="row">
      <div class="col-sm-6">
        <%if current_user.locations.any?%>
          <%= form_with(scope: "order", url: checkouts_path(@order), method: :get, local: true) do |form| %>
            <%= form.collection_select :location_id,current_user.locations.all, :id, :state, { include_blank: false }, { class: "form-control" }%>
      </div>
      <div class="col-sm-6">
        <%= link_to 'Add Address ', new_location_path, :class => 'btn btn-primary' %>
      </div>
    </div>
    <br>
          <%= form.submit  :class => "btn btn-primary", :value => "Checkout"%>
          <%end %>
        <%else%>
          <%= link_to 'Add Address ', new_location_path, :class => 'btn btn-primary' %>
        </div></div>
        <%end %>
  </div><br>

    <% @order_items.each do |order_item| %>
      <div class="div1" style="background-color: #eee;">
        <div class="row">
          <h2><%= order_item.product.name %></h2>
        </div>
        <div class="row">
          <%if order_item.product.image.attached? %>
            <%= image_tag order_item.product.image, size: "150x100"%>
          <%end%>
        </div>
        <div class="row">
          <p>Price: <%= order_item.product.price%></p>
          <p>quantity: <%= order_item.quantity%></p>
          <%= link_to 'Show', product_path(order_item.product), :class => 'btn btn-primary'%>
          <%= link_to 'Remove', order_path(order_item),
                method: :delete,
                data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary' %>
        </div>
      </div>
      <br>
    <% end %>
<%else%>
  <div class="div1" style="background-color: #eee;">
    <h1> No Item In Cart</h1>
    <h1> <%= link_to 'Add Item', welcome_index_path, method: :get, :class => 'btn btn-primary' %> </h1> 
  </div>
<%end%>

<style>
   .div1 {
  width: 300px;
  height: 300px;
  border: 1px solid blue;
}
  }
</style>
