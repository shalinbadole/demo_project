<h1>Bill</h1>
 
<table class="table">
  <tr>
    <th>Name</th>
    <th>Quantity</th>
    <th>price</th>
    <th>Total</th>
    <th></th>
  </tr>
 
  <% @order.order_items.each do|item|%>
    <tr>
      <td><%= item.product.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.product.price %></td>
      <td><%= item.quantity*item.product.price %></td>

      <td><%= link_to 'Show', product_path(item.product) %></td>
    </tr>
  <% end %>
</table>

<div class="div1" style="background-color: #eee;">
  <h1> <%= current_user.name%></h1>
  <h1> Price:<%= @order.total %></h1>
  <div class="row">
    <div class="col-sm-6">
      <%if current_user.locations.any?%>
        <%= form_with(scope: "order", url: order_path(@order), method: :put, local: true) do |form| %>
          <%= form.collection_select :location_id,current_user.locations.all, :id, :state, { include_blank: false }, { class: "form-control" }%>
    </div>
    <div class="col-sm-6">
        <%= link_to 'Add Address ', new_location_path, :class => 'btn btn-primary' %>
    </div>
  </div><br>
          <%= form.submit  :class => "btn btn-primary", :value => "Order"%>
        <%end %>
      <%else%>
        <%= link_to 'Add Address ', new_location_path, :class => 'btn btn-primary' %>
      <%end %>
</div>

<style>
   .div1 {
  width: 300px;
  height: 300px;
  border: 1px solid blue;
}
  }
</style>
