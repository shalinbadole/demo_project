<%= form_with(model: @product, local: true) do |form| %> 
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group row">
    <%= form.label :Name, :class => "col-sm-2 col-form-label"%>
    <div class="col-sm-6">
    <%= form.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :Price, :class => "col-sm-2 col-form-label"%>
    <div class="col-sm-6">
      <%= form.text_field :price, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :Tax, :class => "col-sm-2 col-form-label"%>
    <div class="col-sm-6">
      <%= form.text_field :tax, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :Description, :class => "col-sm-2 col-form-label"%>
    <div class="col-sm-6">
      <%= form.text_field :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :Category, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.collection_select :category_id,Category.where(parent_category_id: nil).all, :id, :name, { include_blank: false }, { class: "form-control" }%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :Category, :class => "col-sm-2 col-form-label"%>
    <div class="col-sm-6">
      <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: false }, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :product_photo, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-1">
      <%= form.file_field :image %>
    </div>
  </div>
  <%= form.submit :class => "btn btn-primary"%>
<% end %>
