<h2>All Products of <%= current_user.name%> </h2>
<table class="table" cellpadding="10">
  <tr>
    <th>name </th>    
    <th>Price </th>
    <th>Description </th>
    <th>Category </th>
    <th>Sub Category </th>
    <th colspan="3"></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
      <td><%= Category.find(product.category.parent_category_id).name%></td>
      <td><%= product.category.name%></td>
      <td><%= link_to 'Edit ', edit_product_path(product) %><br></td>
      <td><%= link_to ' Delete', product_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New Product', new_product_path, class: "btn btn-primary" %>
